{
  "private": true,
  "type": "module",
  "workspaces": [
    "domain",
    "frontend"
  ],
  "scripts": {
    "build": "yarn workspace frontend build",
    "start": "yarn workspace frontend start",
    "architecture-tests": "yarn depcruise domain/src frontend/src",
    "test": "yarn workspace pt-domain test && yarn workspace frontend test",
    "tsc": "tsc --build",
    "tsc:watch": "tsc --build --watch",
    "prepare": "husky",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "dependencies": {
    "prettier": "^3.3.2"
  },
  "devDependencies": {
    "dependency-cruiser": "^16.10.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.43.0",
    "syncpack": "^13.0.4"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "oxlint --fix"
    ],
    "*.{json,md,css,less,html}": [
      "prettier --write"
    ]
  }
}
